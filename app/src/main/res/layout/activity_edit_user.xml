<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="Edit User"
            android:textSize="38sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/lie_id2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lie_id1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_gravity="left|center_vertical"
                android:text="Name:"
                android:textSize="20sp"
                android:layout_weight="1"/>
                <EditText
                    android:id="@+id/name_text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Please input name"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E0E0" />

        <!--        性别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/lie_id1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical|left"
                android:text="Gender:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <!--            <EditText-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="353dp"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:hint="Please input gender"-->
            <!--                android:singleLine="true"-->
            <!--                android:textSize="20sp" />-->
            <!--            单选框-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="40dp"
                android:text="Female"
                android:singleLine="true"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E0E0" />

        <!--年龄-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/lie_id1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:text="Age:"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="40dp"
                android:text="18"
                android:singleLine="true"
                android:textSize="20sp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E0E0" />
        <!--        公司-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/lie_id1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:text="Company:"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network Company"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="40dp"
                android:textSize="20sp" />

