<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/get_new"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="getnew" />
        <Button
            android:id="@+id/get_old"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="getold" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/nothing" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan code for face recognition"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/right_arrow" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="#9EF8F6F6"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_marginTop="5dp"
                    android:text="Predicted"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/goods1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/shop"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_text1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Goods Name"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_describe1"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text="This is the default picture without any meaning"
                            android:textColor="#DF5E5D5D"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:gravity="right|bottom"
                            android:text="Quantity: 1"

                            android:textColor="#5E5D5D"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0.1px"
                        android:background="#9EF8F6F6"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/goods2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/shop"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_text2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Goods Name"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_describe2"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text="This is the default picture without any meaning"
                            android:textColor="#DF5E5D5D"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:gravity="right|bottom"
                            android:text="Quantity: 1"

                            android:textColor="#5E5D5D"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0.1px"
                        android:background="#9EF8F6F6"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/goods3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/shop"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_text3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Goods Name"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_describe3"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:text="This is the default picture without any meaning"
                            android:textColor="#DF5E5D5D"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:gravity="right|bottom"
                            android:text="Quantity: 1"
                            android:textColor="#5E5D5D"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="#9EF8F6F6"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="right">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="7"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Recommended Products"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="40dp">
                    <ImageView
                        android:id="@+id/goods4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/shop"/>
                    <TextView
                        android:id="@+id/name_text4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:text="Try cranberry cookie "/>

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="$99.99"
                        android:textSize="18sp"
                        android:textColor="#E13D09"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="40dp">
                    <ImageView
                        android:id="@+id/goods5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/shop"/>
                    <TextView
                        android:id="@+id/name_text5"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:text="Try cranberry cookie "/>

                    <TextView
                        android:id="@+id/price5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="$99.99"
                        android:textSize="18sp"
                        android:textColor="#E13D09"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="40dp">
                    <ImageView
                        android:id="@+id/goods6"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/shop"/>
                    <TextView
                        android:id="@+id/name_text6"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:text="Try cranberry cookie "/>

                    <TextView
                        android:id="@+id/price6"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="$99.99"
                        android:textSize="18sp"
                        android:textColor="#E13D09"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>