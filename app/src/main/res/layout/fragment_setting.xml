    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="Light Brightness"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/led_bar"
            android:layout_width="388dp"
            android:layout_height="20dp"
            android:minHeight="80dp"
            android:maxHeight="100dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="27dp"
            android:max="8" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infrared LED"
            android:textSize="24sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical|left"
            android:layout_centerVertical="true"/>

        <ToggleButton
            android:id="@+id/button_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_icon_selector"
            android:gravity="right"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="0sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#25555555"
        android:layout_marginBottom="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            />
        <ToggleButton
            android:id="@+id/button_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_icon_selector"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textSize="0sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer List"
            android:textSize="24sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical|left"
            android:layout_centerVertical="true"/>
        <ToggleButton
            android:id="@+id/button_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_icon_selector"
            android:gravity="right"
            android:layout_marginRight="40dp"
            android:textSize="0sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Jump Interval"
            android:textSize="24sp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#858181"/>

        </LinearLayout>



        <TextView
            android:layout_width="20dp"
            android:layout_marginLeft="657dp"
            android:layout_height="40dp"
            android:text="s"
            android:textSize="24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Predicted Orders"
            android:textSize="24sp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp">
            <EditText
                android:id="@+id/id_forecast_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124.221.187.242:8081"
                android:hint="default"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#858181"/>


        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Recommended Products"
            android:textSize="24sp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id_recommended_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124.221.187.242:8081"
                android:hint="default"
                android:textSize="24sp"
                android:background="@null"
                android:textCursorDrawable="@null"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#858181"/>

        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="23dp"
        android:background="#B9555555"
        />
    <!--    人脸识别 开始-->
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Function Control"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face Recognition"
            android:textSize="24sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical|left"/>
        <ToggleButton
            android:id="@+id/button_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/menu_button_icon_selector"
            android:gravity="right"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="0sp"/>


    </RelativeLayout>



    <!--    人脸识别 结束-->






<!--保存按钮-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/exit"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/frame"
            android:text="Exit APP"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>